        <Label fx:id="welcomeLabel" styleClass="headline" text="Welcome Back, User!">
         <font>
            <Font size="18.0" />
         </font></Label>

        <!-- spacer -->
        <Region HBox.hgrow="ALWAYS" />

        <!-- logout -->
        <Button fx:id="logoutButton" onAction="#logout" prefHeight="40.0" prefWidth="150.0" styleClass="secondary-btn" text="ðŸšª Log Out">
         <font>
            <Font size="14.0" />
         </font></Button>
    </HBox>

    <!-- Main content below -->
    <VBox layoutX="20" layoutY="80" spacing="20" styleClass="center-container" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">

        <ScrollPane fitToWidth="true" prefHeight="500.0" styleClass="project-scroll">
            <VBox fx:id="projectListVBox" spacing="10">
                <padding>
                    <Insets bottom="10" left="20" right="20" top="10" />
                </padding>
            </VBox>
        </ScrollPane>

        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="newProjectButton" onAction="#openNewProject" prefHeight="40.0" prefWidth="150.0" styleClass="primary-btn" text="âž• New Project" />
            <Button fx:id="settingsButton" onAction="#openSettings" prefHeight="40.0" prefWidth="150.0" styleClass="primary-btn" text="âš™ Settings">
            <font>
               <Font size="14.0" />
            </font></Button>
        </HBox>

    </VBox>

</AnchorPane>
